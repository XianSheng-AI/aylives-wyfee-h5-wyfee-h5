.des-detail
  width 100%
  height 100%
  top 0
  left 0
  right 0
  overflow hidden
  img
    width 100%
  .introduct
    color #454545
    text-align left
    margin-top 26px
    .title
      margin 0 18px 25px
      text-align center
      font-size 20px
      @media only screen and (max-width 340px)
        margin 0 5px 25px
        font-size 19px
    .content
      margin 0 18px
      font-size 14px
      line-height 20px
      text-indent 26px
  .detail-info
    color #454545
    font-size 15px
    text-align left
    list-style none
    margin-top 15px
    li
      margin 10px 18px
      line-height 24px
    .record
      position relative
      .explain
        position absolute
        color #999999
      .rule
        top 20px
        left 20px
      .content
        margin-left 88px
  .btn
    margin 36px auto
    width 91.5%
    line-height 45px
    height 45px
    background rgba(247,202,75,1)
    box-shadow -1px 9px 11px 0px rgba(250,218,116,0.5)
    border-radius 3px
    font-size 18px
    font-weight 500
    color rgba(37,37,37,1)
  .disable-btn
    margin 36px auto
    width 91.5%
    line-height 45px
    font-weight 500
    font-size 18px
    border-radius 3px
    background rgba(202,202,202,1)
    color rgba(255,255,255,1)
    box-shadow none